<h3>
  <%= @conference.call %>
</h3>

<h1>
  <%= @conference.name %>
</h1>

<p>
  <%= @conference.host %>, 
  <%= @conference.dates %>
</p>

<p>
  <b>Applicant:</b>
  <%= @conference.applicant %>
</p>

<p>
  <b>Description:</b>
  <%= markdown @conference.description %>
</p>

<p>
  <b>Funding:</b>
  <%= @conference.funding %>
</p>


<% end %>
<% if can? :edit, @member %>
<%= link_to 'Edit', edit_conference_path(@conference) %> |
<% end %>
<% if can? :destroy, @member %>
<%= link_to 'Destroy', @conference, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', conferences_path %>
