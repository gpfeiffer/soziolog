<h1>Listing conferences</h1>

<table>
  <tr>
    <th>Call</th>
    <th>Name</th>
    <th>Host</th>
    <th>Date</th>
    <th>Applicant</th>
    <th>Description</th>
    <th>Funding</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @conferences.each do |conference| %>
  <tr>
    <td><%= conference.call %></td>
    <td><%= conference.name %></td>
    <td><%= conference.host %></td>
    <td><%= conference.date %></td>
    <td><%= conference.applicant %></td>
    <td><%= conference.description %></td>
    <td><%= conference.funding %></td>
    <td><%= link_to 'Show', conference %></td>
    <td><%= link_to 'Edit', edit_conference_path(conference) %></td>
    <td><%= link_to 'Destroy', conference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

