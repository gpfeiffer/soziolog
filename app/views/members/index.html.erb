<% if @email %>
<h1>Members without Email</h1>

<table>
<% @members.each do |member| %>
  <tr>
    <td align="right"><%= member.number %></td>
    <td><%= link_to member.fullname, member %></td>
    <td><%= member.address %></td>
  </tr>
<% end %>
</table>

<% else %>
<h1>Members</h1>

<% members_by_first = @members.group_by { |m| m.surname[0] } %>

<p>|
<% members_by_first.each_key do |key| %>
<%= link_to(key, :anchor => key) %> |
<% end %>
</p>

[<%= mail_to @members.map(&:email).join(','), "Mail All", :cc => "goetz.pfeiffer@nuigalway.ie" %>]

<table>
<% members_by_first.each do |key, members| %>
<% members.each do |member| %>
  <tr>
    <td align="right"><%= member.number %></td>
    <td><%= link_to member.name, member %></td>
    <td><%= link_to("", {}, :name => key) %></td>
  </tr>
<% end %>
<% end %>
</table>

<br />

<%= link_to 'New Member', new_member_path %>
<% end %>
