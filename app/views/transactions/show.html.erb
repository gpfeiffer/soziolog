<h3><%= link_to @transaction.date, @transaction.balance %></h3>
<h1>Transaction</h1>

<p>
  <b>Text:</b>
  <%= @transaction.text %>
</p>

<p>
  <b>Amount:</b>
  <%= money @transaction.amount %>
</p>

<p>
  <b>Comment:</b>
  <%= @transaction.comment %>
</p>

<p>
  <%= render :partial => 'subscriptions', 
             :locals => { :transaction => @transaction } %>
</p>

<p>
  <%= render :partial => 'fundings', 
             :locals => { :transaction => @transaction } %>
</p>

<p>
  <%= render :partial => 'labels', 
             :locals => { :transaction => @transaction } %>
</p>



<%= link_to 'Edit', edit_transaction_path(@transaction) %> |
<%= link_to 'Destroy', @transaction, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', transactions_path %>
